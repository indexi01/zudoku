{
	"name": "@stefanprobst/rehype-extract-toc",
	"version": "3.0.0",
	"license": "MIT",
	"repository": "https://github.com/stefanprobst/rehype-extract-toc",
	"author": "Stefan Probst <stefanprobst@posteo.de>",
	"type": "module",
	"engines": {
		"node": ">=18"
	},
	"packageManager": "pnpm@10.8.0",
	"main": "src/index.js",
	"types": "src/index.d.ts",
	"exports": {
		".": {
			"types": "./src/index.d.ts",
			"import": "./src/index.js",
			"default": "./src/index.js"
		},
		"./mdx": {
			"types": "./src/mdx.d.ts",
			"import": "./src/mdx.js",
			"default": "./src/mdx.js"
		}
	},
	"files": [
		"src",
		"mdx"
	],
	"scripts": {
		"format:check": "prettier . --cache --check",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "eslint . --cache",
		"lint:fix": "pnpm run lint:check --fix",
		"prepare": "simple-git-hooks || true",
		"test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
		"validate": "run-s format:check lint:check test"
	},
	"dependencies": {
		"estree-util-is-identifier-name": "^3.0.0",
		"estree-util-value-to-estree": "^3.3.3",
		"hast-util-heading-rank": "^3.0.0",
		"hast-util-to-string": "^3.0.1",
		"unist-util-visit": "^5.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.0",
		"@eslint/js": "^9.24.0",
		"@jest/globals": "^29.7.0",
		"@jest/types": "^29.6.3",
		"@mdx-js/mdx": "^3.1.0",
		"@stefanprobst/commitlint-config": "^2.0.0",
		"@stefanprobst/prettier-config": "^4.1.0",
		"eslint": "^9.24.0",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-n": "^17.17.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"globals": "^16.0.0",
		"jest": "^29.7.0",
		"lint-staged": "^15.5.0",
		"npm-run-all2": "^7.0.2",
		"prettier": "^3.5.3",
		"rehype-parse": "^9.0.1",
		"rehype-slug": "^6.0.0",
		"rehype-stringify": "^10.0.1",
		"simple-git-hooks": "^2.12.1",
		"typescript": "^5.8.3",
		"unified": "^11.0.5"
	},
	"commitlint": {
		"extends": "@stefanprobst/commitlint-config"
	},
	"jest": {
		"prettierPath": null
	},
	"lint-staged": {
		"*.js": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.(json|md)": "prettier --cache --write"
	},
	"prettier": "@stefanprobst/prettier-config",
	"simple-git-hooks": {
		"commit-msg": "pnpm exec commitlint --edit",
		"pre-commit": "pnpm exec lint-staged",
		"pre-push": "pnpm run validate"
	}
}
